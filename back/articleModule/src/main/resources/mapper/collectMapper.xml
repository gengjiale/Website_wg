<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.website.mapper.CollectMapper" >

    <select id="selectArticleIdListByUserId" resultType="string">
        select articleid from collect where userid = #{id}
    </select>
    <insert id="insert">
        insert into collect (userid, articleid) values (#{userid}, #{articleid})
    </insert>

    <delete id="delete">
        delete from collect where userid = #{userid} and articleid = #{articleid}
    </delete>
</mapper>