<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.website.mapper.LikeMapper" >

    <select id="selectArticleIdListByUserId" resultType="string">
        select articleid from likes where userid = #{id};
    </select>

    <insert id="insert">
        insert into likes (userid, articleid) values (#{userid}, #{articleid})
    </insert>

    <delete id="delete">
        delete from likes where userid = #{userid} and articleid = #{articleid}
    </delete>
</mapper>